        xmlns:local="clr-namespace:WorkWithWords"
        mc:Ignorable="d"
        Title="Work With Words" Height="450" Width="800">
    <Grid>
        <DataGrid Name="WordsGrid" Margin="50,100,50,80" Loaded="grid_Loaded" MouseUp="grid_MouseUp" />
        <Button x:Name="Connection" Content="Соеденение с БД" HorizontalAlignment="Left" Margin="572,349,0,0" VerticalAlignment="Top" Width="100" Click="Connetion_Click"/>
        <Button x:Name="AddWord" Content="Добавить слово" HorizontalAlignment="Left" Margin="100,349,0,0" VerticalAlignment="Top" Width="100" Click="AddWord_Click"/>
        <Button x:Name="DeleteWord" Content="Удалить слово" HorizontalAlignment="Left" Margin="300,349,0,0" VerticalAlignment="Top" Width="100" Click="DeleteWord_Click"/>
        <TextBox x:Name="connection" Margin="453,32,100,350"  />
        
    </Grid>
</Window>
